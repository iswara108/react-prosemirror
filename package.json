{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "jsxSingleQuote": false
  },
  "name": "react-prosemirror",
  "author": "iswara.chaitanya",
  "module": "dist/react-prosemirror.esm.js",
  "size-limit": [
    {
      "path": "dist/react-prosemirror.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-prosemirror.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.7.0",
    "@types/prosemirror-model": "^1.11.0",
    "@types/prosemirror-schema-basic": "^1.0.1",
    "@types/prosemirror-state": "^1.2.5",
    "@types/prosemirror-view": "^1.16.1",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "husky": "^4.3.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "size-limit": "^4.7.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "prosemirror-model": "^1.12.0",
    "prosemirror-schema-basic": "^1.1.2",
    "prosemirror-state": "^1.3.3",
    "prosemirror-view": "^1.16.1"
  }
}
